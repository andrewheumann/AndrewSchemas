{
    "$id": "https://raw.githubusercontent.com/andrewheumann/AndrewSchemas/master/AreaTally.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "A tally of the area deltas between targets + results",
    "title": "AreaTally",
    "x-namespace": "Elements",
    "allOf": [
        {
            "$ref": "https://hypar.io/Schemas/Element.json"
        }
    ],
    "type": "object",
    "discriminator": "discriminator",
    "properties": {
        "Program Type": {
            "type": "string"
        },
        "Program Color": {
            "type": "object",
            "discriminator": "Elements.Geometry.Color",
            "properties": {
                "Red": {
                    "type": "number"
                },
                "Green": {
                    "type": "number"
                },
                "Blue": {
                    "type": "number"
                }
            }
        },
        "Area Target": {
            "type": "number",
            "$hyparUnitType": "area",
            "$hyparUnitSystem": "Metric"
        },
        "Achieved Area": {
            "type": "number",
            "$hyparUnitType": "area",
            "$hyparUnitSystem": "Metric"
        }
    },
    "additionalProperties": false
}